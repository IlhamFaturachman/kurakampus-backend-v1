# ==================================
# KURAKAMPUS BACKEND - Environment Variables
# ==================================
# Copy this file to .env and fill in the values
# NEVER commit .env file to version control!

# ==================================
# APPLICATION
# ==================================
# Application environment: development | staging | production
NODE_ENV=development

# Server port
PORT=3000

# ==================================
# DATABASE
# ==================================
# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL="postgresql://user:password@localhost:5432/mydb?schema=public"
# DATABASE_URL="postgresql://postgres:[PASSWORD]@db.sbwxvseihuvckmsiasvt.supabase.co:5432/postgres?pgbouncer=true"
# DIRECT_URL="postgresql://postgres:[PASSWORD]@db.sbwxvseihuvckmsiasvt.supabase.co:5432/postgres"

# Connection pool settings (optional)
# DATABASE_CONNECTION_LIMIT=10
# DATABASE_POOL_TIMEOUT=30

# ==================================
# AUTHENTICATION & SECURITY
# ==================================
# JWT Secret (REQUIRED - min 32 characters)
# Generate with: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# JWT Expiration
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# Cookie Secret for signed cookies (REQUIRED)
# Generate with: openssl rand -base64 32
COOKIE_SECRET=your-cookie-secret-change-this-in-production

# ==================================
# CORS CONFIGURATION
# ==================================
# Comma-separated list of allowed origins for production
# Example: https://app.kurakampus.com,https://admin.kurakampus.com
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# ==================================
# REDIS
# ==================================
# Redis connection URL for caching and rate limiting
REDIS_URL=redis://localhost:6379

# Redis database number (optional)
# REDIS_DB=0

# ==================================
# EMAIL (Optional - for verification and notifications)
# ==================================
# SMTP_HOST=smtp.mailtrap.io
# SMTP_PORT=2525
# SMTP_USER=your-smtp-username
# SMTP_PASS=your-smtp-password
# SMTP_FROM=noreply@kurakampus.com

# ==================================
# RATE LIMITING
# ==================================
# Global rate limit (requests per window)
RATE_LIMIT_TTL=900
RATE_LIMIT_MAX=100

# Auth endpoints rate limit
AUTH_RATE_LIMIT_TTL=900
AUTH_RATE_LIMIT_MAX=5

# ==================================
# ENCRYPTION
# ==================================
# Encryption key for sensitive data (REQUIRED in production)
# Generate with: openssl rand -base64 32
# ENCRYPTION_KEY=your-encryption-key-change-this-in-production

# ==================================
# EXTERNAL SERVICES (Optional)
# ==================================
# AWS S3 for file uploads
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_S3_BUCKET=kurakampus-uploads

# Sentry for error tracking
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project

# ==================================
# OAUTH (Optional - for social login)
# ==================================
# Google OAuth
# GOOGLE_CLIENT_ID=your-google-client-id
# GOOGLE_CLIENT_SECRET=your-google-client-secret
# GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

# GitHub OAuth
# GITHUB_CLIENT_ID=your-github-client-id
# GITHUB_CLIENT_SECRET=your-github-client-secret
# GITHUB_CALLBACK_URL=http://localhost:3000/auth/github/callback

# ==================================
# FEATURE FLAGS (Optional)
# ==================================
# ENABLE_SWAGGER=true
# ENABLE_2FA=true
# ENABLE_EMAIL_VERIFICATION=true

# ==================================
# LOGGING
# ==================================
# Log level: debug | info | warn | error
LOG_LEVEL=info

# Log output: console | file | both
# LOG_OUTPUT=console
